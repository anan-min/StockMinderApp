             x:Class="StockMinderApp.Views.UserFlyoutTemplate"
             xmlns:local="clr-namespace:StockMinderApp.Views">

    <FlyoutPage.Flyout>
        <local:UserNavPage/>
    </FlyoutPage.Flyout>

    <FlyoutPage.Detail>
        <NavigationPage BarBackgroundColor="#5256fe">
            <x:Arguments>
                <local:MainPageDetail/>
            </x:Arguments>
        </NavigationPage>
    </FlyoutPage.Detail>

</FlyoutPage>
